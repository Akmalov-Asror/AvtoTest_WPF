<Page x:Class="Avtoauto.Pages.Examination"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Avtoauto.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Examination">

    <Page.Resources>
        <Style x:Key="Name" TargetType="Button">
            
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <Label Grid.Row="0" Grid.Column="1" Name="Title" VerticalAlignment="Top" HorizontalAlignment="Center" Height="30" FontSize="16" Content="Examination" Background="#FFB69B9B"></Label>
            <StackPanel x:Name="QuestionIndexButtonPanel" Height="50" Margin="10" Orientation="Horizontal">

            </StackPanel>
            <Image x:Name="QuestionImage" Width="200" Height="200">

            </Image>
            <TextBlock x:Name="QuestionText"  VerticalAlignment="Top" TextWrapping="Wrap" Height="40" FontSize="14" FontWeight="Bold"/>
            <StackPanel  Name="ChoicePanel">
                
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
